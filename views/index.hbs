<div class="container">
	<form role="form" action="/auth/login" class="form-horizontal" method="POST">
		<div class="form-group">
			<label class="control-label">Name: </label>
			<input type="text" name="name" placeholder="Enter your Username" class="form-control form-horizontal" />
		</div>
		<div class="form-group">
			<label class="control-label">Password: </label>
			<input type="password" name="password" class="form-control" />
