	<h1 id="hero">LiveBlogger</h1>
	<div class="col-md-4">
		<h3 class="jumbotron-label"><i class="fa fa-feed"></i>Live</h3>
	</div>
	<div class="col-md-4">
		<h3 class="jumbotron-label"><i class="fa fa-comment"></i>Blogging</h3>
